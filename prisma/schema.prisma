generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Usuarios {
  id        Int      @id @default(autoincrement())
  nome      String
  sobrenome String
  email     String   @unique
  senha     String
  cpf       String
  imagemUrl String
  admin     Boolean
  perfis    Perfis[]
}

model Perfis {
  id        Int      @id @default(autoincrement())
  titulo    String
  imagemUrl String
  usuarioId Int
  usuario   Usuarios @relation(fields: [usuarioId], references: [id])
}
